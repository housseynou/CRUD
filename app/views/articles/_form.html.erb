<%= form_with model: article do |form| %>
    <div class="container">
        <div class="mb-3">
            <label for="exampleFormControlInput1" class="form-label">  <%= form.label :title %> </label> <br>
            <input type="text" class="form-control" id="exampleFormControlInput1" <%= form.text_field :title %>
            <% article.errors.full_messages_for(:title).each do |message| %>
                <div><%= message %></div>
            <% end %>
        </div>
    
    
        <div class="mb-3">
            <label for="exampleFormControlTextarea1" class="form-label"> <%= form.label :body %> </label><br>
            <textarea class="form-control" id="exampleFormControlTextarea1" rows="3" <%= form.text_area :body %><br>
            <% article.errors.full_messages_for(:body).each do |message| %>
                <div><%= message %></div>
            <% end %>
        </div>
    
        <div>
        <%= form.submit %>
        </div>
    </div>
  <% end %>
  